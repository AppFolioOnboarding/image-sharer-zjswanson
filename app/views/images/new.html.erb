<h1>Create New Image</h1>
<%= form_with(model: @image, class: "form") do |form| %>
  <% %i[name url description].each do |attr| %>
    <div class="form-input" id="<%= attr %>_input">
      <%= form.label attr %>
      <%= form.text_field attr %>
      <% unless @image.errors[attr].empty? %>
        <% @image.errors[attr].each do |error| %>
          <small class="form-text text-muted"><%= error %></small>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <div class="form-input" id="tag_list_input">
      <%= form.label :tag_list %>
      <%= form.text_field :tag_list %>
      <small class="form-text text-muted">Separate multiple tags with commas</small>
      <% unless @image.errors[:tag_list].empty? %>
        <% @image.errors[:tag_list].each do |error| %>
          <small class="form-text text-muted"><%= error %></small>
        <% end %>
      <% end %>
    </div>
  <%= form.submit %>
<% end %>
